<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.ssau.demo.Entity.CarEntity</class>
        <class>com.ssau.demo.Entity.CarpartEntity</class>
        <class>com.ssau.demo.Entity.CarshopEntity</class>
        <class>com.ssau.demo.Entity.CompanyEntity</class>
        <class>com.ssau.demo.Entity.ProductCarEntity</class>
        <class>com.ssau.demo.Entity.ProductCarpartEntity</class>
        <class>com.ssau.demo.Entity.UserEntity</class>
        <class>com.ssau.demo.Entity.UserRoleEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/software_development"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
